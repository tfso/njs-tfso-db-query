{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "declaration": true,
        "traceResolution":  true,
        //"noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "noLib": false,
        "preserveConstEnums": true,
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "exclude": [
        "dist",
        "node_modules",
        "examples"
    ]
}